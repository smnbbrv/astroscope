{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@astroscope/csrf#build": {
      "dependsOn": ["@astroscope/excludes#build"],
      "outputs": ["dist/**"]
    },
    "@astroscope/pino#build": {
      "dependsOn": ["@astroscope/excludes#build"],
      "outputs": ["dist/**"]
    },
    "@astroscope/opentelemetry#build": {
      "dependsOn": ["@astroscope/excludes#build"],
      "outputs": ["dist/**"]
    },
    "@astroscope/i18n#build": {
      "dependsOn": ["@astroscope/excludes#build"],
      "outputs": ["dist/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "lint:fix": {},
    "test": {}
  }
}
