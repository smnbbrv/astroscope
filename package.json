{
  "name": "astroscope",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "packages/*",
    "demo/*"
  ],
  "overrides": {
    "vite": "^6.4.1"
  },
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "test": "bun test",
    "validate": "turbo run test lint typecheck",
    "dev": "bun run --cwd demo/boot dev",
    "ci:version": "changeset version && bun update",
    "ci:publish": "for dir in packages/*; do (cd \"$dir\" && npm publish --access public --provenance || true); done && changeset tag"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.3",
    "@tailwindcss/vite": "^4.2.0",
    "@types/bun": "^1.3.9",
    "@typescript-eslint/parser": "^8.56.0",
    "daisyui": "^5.5.19",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.6.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^4.2.0",
    "tsup": "^8.5.1",
    "turbo": "^2.8.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  }
}
