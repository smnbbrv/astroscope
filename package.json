{
  "name": "astroscope",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "demo/*"
  ],
  "scripts": {
    "build": "bun run --filter '@astroscope/excludes' build && bun run --filter '!@astroscope/excludes' build",
    "lint": "bun run --filter '*' lint",
    "lint:fix": "bun run --filter '*' lint:fix",
    "typecheck": "bun run --filter '*' typecheck",
    "test": "bun test",
    "validate": "bun test && bun run lint && bun run typecheck",
    "dev": "bun run --cwd demo/boot dev",
    "ci:version": "changeset version && bun update",
    "ci:publish": "for dir in packages/*; do (cd \"$dir\" && npm publish --access public --provenance || true); done && changeset tag"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "daisyui": "^5.0.0",
    "tailwindcss": "^4.0.0",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.6",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
