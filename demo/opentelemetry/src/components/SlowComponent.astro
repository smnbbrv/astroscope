---
interface Props {
  name: string;
  delay?: number;
}

const { name, delay = 100 } = Astro.props;

// Simulate slow async operation
await new Promise((resolve) => setTimeout(resolve, delay));
---

<div class="slow-component">
  <strong>{name}</strong>
  <span class="delay">(rendered in {delay}ms)</span>
</div>

<style>
  .slow-component {
    padding: 0.5rem 1rem;
    margin: 0.5rem 0;
    background: #f0f0f0;
    border-radius: 4px;
    border-left: 3px solid #666;
  }
  .delay {
    color: #666;
    font-size: 0.875rem;
    margin-left: 0.5rem;
  }
</style>
