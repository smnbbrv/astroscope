---
import { getContext, i18n } from '@astroscope/i18n/internal';

const context = getContext();
const script = context ? i18n.getClientScript(context.locale) : null;
---

{
  script ? (
    <script is:inline set:html={script} />
  ) : (
    <script is:inline>
      console.error('[i18n] no context - make sure i18n middleware is configured');
    </script>
  )
}
