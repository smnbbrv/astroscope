  "repository": {
    "type": "git",
    "url": "git+https://github.com/smnbbrv/astroscope.git",
    "directory": "packages/pino"
  },
  "keywords": [
    "astro",
    "astro-integration",
    "pino",
    "logging",
    "http",
    "middleware",
    "observability"
  ],
  "author": "smnbbrv",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smnbbrv/astroscope/issues"
  },
  "homepage": "https://github.com/smnbbrv/astroscope/tree/main/packages/pino#readme",
  "scripts": {
    "build": "tsup src/index.ts src/middleware-entrypoint.ts --format esm --dts --external virtual:@astroscope/pino/config",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix"
  },
  "devDependencies": {
    "astro": "^5.17.1",
    "pino": "^10.3.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
