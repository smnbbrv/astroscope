{
  "name": "@astroscope/pino",
  "version": "0.2.1",
  "description": "Pino logging for Astro â€” request-scoped context, pino-http style API",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
