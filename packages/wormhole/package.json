{
  "name": "@astroscope/wormhole",
  "version": "0.1.1",
  "description": "Share dynamic server data with React islands and client scripts â€” typed, reactive",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./astro": {
      "import": "./src/astro/index.ts"
    }
  },
  "files": [
    "dist",
    "src/astro"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smnbbrv/astroscope.git",
    "directory": "packages/wormhole"
  },
  "keywords": [
    "astro",
    "astro-integration",
    "ssr",
    "state",
    "islands",
    "react"
  ],
  "author": "smnbbrv",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smnbbrv/astroscope/issues"
  },
  "homepage": "https://github.com/smnbbrv/astroscope/tree/main/packages/wormhole#readme",
  "scripts": {
    "build": "tsup src/index.ts src/server.ts src/react/index.ts --format esm --dts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "devDependencies": {
    "@types/react": "^19.2.13",
    "astro": "^5.17.1",
    "react": "^19.2.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "astro": "^5.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
