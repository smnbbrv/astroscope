{
  "name": "@astroscope/opentelemetry",
  "version": "0.2.1",
  "description": "OpenTelemetry for Astro â€” tracing, metrics, and component instrumentation that works in dev mode",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware-entrypoint.d.ts",
      "import": "./dist/middleware-entrypoint.js"
    },
    "./components": {
      "import": "./src/components/index.ts"
    }
  },
  "files": [
    "dist",
    "src/components"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smnbbrv/astroscope.git",
    "directory": "packages/opentelemetry"
  },
  "keywords": [
    "astro",
    "astro-integration",
    "opentelemetry",
    "tracing",
    "observability",
    "middleware",
    "analytics",
    "performance"
  ],
  "author": "smnbbrv",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smnbbrv/astroscope/issues"
  },
  "homepage": "https://github.com/smnbbrv/astroscope/tree/main/packages/opentelemetry#readme",
  "scripts": {
    "build": "tsup src/index.ts src/middleware-entrypoint.ts --format esm --dts --external virtual:@astroscope/opentelemetry/config",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx,astro}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx,astro}' --fix"
  },
  "devDependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^2.2.0",
    "astro": "^5.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@astroscope/excludes": "^0.1.0",
    "@opentelemetry/api": "^1.0.0",
    "@opentelemetry/core": "^2.0.0",
    "astro": "^5.0.0"
  }
}
